<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.paoim4.front.AddGroupController">
   <children>
      <Label text="Add a new group:" />
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <Label text="Choose name for the group:" />
            <TextField fx:id="nameTF" />
            <Label text="Choose size of the group:" />
            <TextField fx:id="sizeTF" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </VBox>
      <Button fx:id="addBtn" mnemonicParsing="false" onMouseClicked="#addBtnClicked" text="Save" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
